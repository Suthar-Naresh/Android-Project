<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/expenseTypeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#DADADA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transport" />

    <TextView
        android:id="@+id/cardExpenseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:text="College To Home"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/cardExpenseType"
        app:layout_constraintEnd_toStartOf="@+id/cardExpenseAmount"
        app:layout_constraintStart_toEndOf="@+id/expenseTypeIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardExpenseType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Transport"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardExpenseTitle"
        app:layout_constraintStart_toStartOf="@+id/cardExpenseTitle"
        app:layout_constraintTop_toBottomOf="@+id/cardExpenseTitle" />

    <TextView
        android:id="@+id/cardExpenseAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="- â‚¹100"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/cardExpenseDate"
        app:layout_constraintEnd_toEndOf="@+id/cardExpenseDate"
        app:layout_constraintStart_toStartOf="@+id/cardExpenseDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardExpenseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="31, Oct 2023"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardExpenseAmount" />

</android.support.constraint.ConstraintLayout>